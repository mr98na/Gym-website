@model IEnumerable<Gym.Models.Subscription>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JoinDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Package.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Package.Title)
        </th>
        <th>
            User
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JoinDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Package.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Package.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @if (!item.IsPay)
            {
                if (Session["Type"].ToString() == "user")
                {
                    @Html.ActionLink("Pay | ", "Edit", new { id = item.ID })
                }
            }
            @*@Html.ActionLink("Details", "Details", new { id = item.ID })*@
        </td>
    </tr>
}

</table>
