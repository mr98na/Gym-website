<!DOCTYPE HTML>
<html>

<head>
    <title> Our Fitness</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/css/icomoon.css">
    <!-- Ion Icon Fonts-->
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/css/flexslider.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <!-- Flaticons  -->
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="~/css/style.css">
    @*<script src="~/js/daypilot-all.min.js?v=2023.2.463"></script>*@
</head>

<body>

    <div class="colorlib-loader"></div>

    <div id="page">
        <nav class="colorlib-nav" role="navigation">
            <div class="top-menu">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-7 col-md-9">
                            <div id="colorlib-logo">
                                <a href="@Url.Action("Index", "Home")">
                                    <img src="~/images/Logo.png" width="120">
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-5 col-md-3">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-left menu-1">
                            <ul>
                                @if (Session["Type"] != null)
                                {
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    if (Session["Type"].ToString() == "admin")
                                    {
                                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                                        <li>@Html.ActionLink("Classes", "Index", "Classes")</li>
                                        <li>@Html.ActionLink("Packages", "Index", "Packages")</li>
                                        <li>@Html.ActionLink("Subscriptions", "Index", "Subscriptions")</li>
                                    }
                                    if (Session["Type"].ToString() == "user")
                                    {
                                        if (Convert.ToBoolean(Session["sub"]))
                                        {
                                            <li>@Html.ActionLink("Join Class", "Details", "Classes")</li>
                                            <li>@Html.ActionLink("My Classes", "MyClass", "Classes")</li>
                                        }

                                        <li>@Html.ActionLink("Subscriptions", "Index", "Subscriptions")</li>
                                    }
                                    if (Session["Type"].ToString() == "trainer")
                                    {

                                        <li>@Html.ActionLink("My Classes", "TrainerClass", "Classes")</li>
                                    }
                                    <li>@Html.ActionLink("My Profile", "MyProfile", "Users")</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Login", "Login", "Users")</li>
                                }


                            </ul>
                        </div>


                    </div>
                </div>
            </div>
            <div class="sale">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 offset-sm-2 text-center">
                            <div class="row">
                                <div class="owl-carousel2">
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">Welcome To Our Fitness</a></h3>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">Welcome To Our Fitness</a></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>


        <div class="container">
            @if (Session["error"] != null)
            {
                <br />
                <br />
                <div class="alert alert-danger">
                    @Session["error"]
                </div>
                Session.Remove("error");
            }

            @if (Session["success"] != null)
            {
                <br />
                <br />
                <div class="alert alert-success">
                    @Session["success"]
                </div>
                Session.Remove("success");
            }
            <hr />
            @RenderBody()
        </div>




        <footer id="colorlib-footer" role="contentinfo">
            <div class="container">
                <div class="row row-pb-md">
                    <div class="col footer-col colorlib-widget">
                        <h4>About Our Fitness</h4>
                        <p>
                            This project aims to manage and allocate sports classes inside the gym upon specific data time with trainers for facilitating the booking process of the classes to the gym clients and the personal trainer booking based on their available dates and times. There are several significant objectives
                        </p>
                        <p>
                            <ul class="colorlib-social-icons">
                                <li><a href="#"><i class="icon-twitter"></i></a></li>
                                <li><a href="#"><i class="icon-instagram"></i></a></li>
                            </ul>
                        </p>
                    </div>
                    <div class="col footer-col colorlib-widget">
                        <h4>Information</h4>
                        <p>
                            <ul class="colorlib-footer-links">
                                <li><a href="@Url.Action("About", "Home")">About us</a></li>
                            </ul>
                        </p>
                    </div>

                    <div class="col footer-col">
                        <h4>Contact Information</h4>
                        <ul class="colorlib-footer-links">
                            <li>291 South 21th Street, <br> Suite 721 Medina 10016</li>
                            <li><a href="tel://1234567920">0112345678</a></li>
                            <li><a href="mailto:info@yoursite.com">info@OurFitness.com</a></li>
                            <li><a href="#">OurFitness.com</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copy">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <p>
                            <span>

                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved | This
                                template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="#">
                                    Our Fitness
                                </a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script>
    <!-- popper -->
    <script src="~/js/popper.min.js"></script>
    <!-- bootstrap 4.1 -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- jQuery easing -->
    <script src="~/js/jquery.easing.1.3.js"></script>
    <!-- Waypoints -->
    <script src="~/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/js/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/magnific-popup-options.js"></script>
    <!-- Date Picker -->
    <script src="~/js/bootstrap-datepicker.js"></script>
    <!-- Stellar Parallax -->
    <script src="~/js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="~/js/main.js"></script>
    @*<script src="~/js/app.js?v=2023.2.463"></script>*@

    @RenderSection("scripts", required: false)

</body>

</html>
